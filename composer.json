{
    "name": "spatie/weight-conversion",
    "description": "Weight conversion in php",
    "keywords": [
        "spatie",
        "weight-conversion"
    ],
    "homepage": "https://github.com/spatie/weight-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Umar Farooq",
            "email": "umarfarooqshafi2101@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "friendsofphp/php-cs-fixer": "^3.13",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\WeightConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\WeightConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
